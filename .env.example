# ================================
# SOLANA TRADING BOT CONFIGURATION
# ================================

# ========================================
# REQUIRED - Solana Wallet Configuration
# ========================================
SOLANA_PRIVATE_KEY=your_base58_private_key_here
# Alternative format: SOLANA_PRIVATE_KEY=[1,2,3,...,64]
SOLANA_PUBLIC_KEY=your_public_key_here

# ================================
# REQUIRED - QuickNode Endpoints
# ================================
QUICKNODE_HTTP_URL=https://your-endpoint.solana-mainnet.quiknode.pro/your-key/
QUICKNODE_WSS_URL=wss://your-endpoint.solana-mainnet.quiknode.pro/your-key/

# =======================================
# OPTIONAL - Solana RPC (public fallback)
# =======================================
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# =================================
# REQUIRED - Trading Configuration
# =================================
TRADE_AMOUNT=35.0
PROFIT_TARGET=2.5
MAX_POSITIONS=4
SLIPPAGE_BPS=50

# ========================================
# REQUIRED - DexTools API (Premium)
# ========================================
DEXTOOLS_API_KEY=your_dextools_api_key_here

# ====================================
# OPTIONAL - Safety Configuration
# ====================================
SAFETY_THRESHOLD=0.60
MIN_LIQUIDITY_USD=2500
MIN_VOLUME_24H=300

# ====================================
# OPTIONAL - Jupiter API Configuration
# ====================================
JUPITER_QUOTE_API=https://quote-api.jup.ag/v6/quote
JUPITER_SWAP_API=https://quote-api.jup.ag/v6/swap

# =====================================
# OPTIONAL - Token Addresses (defaults)
# =====================================
USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
SOL_MINT=So11111111111111111111111111111111111111112

# =========================================
# OPTIONAL - Security APIs (all FREE)
# =========================================
DEXSCREENER_API=https://api.dexscreener.com/latest/dex/tokens

# ============================
# OPTIONAL - Real Trading Mode
# ============================
# ⚠️ WARNING: Set to 'true' to use REAL MONEY
# ⚠️ Only enable after thorough testing
ENABLE_REAL_TRADING=false

# ========================
# RAILWAY DEPLOYMENT ONLY
# ========================
# Railway will automatically set PORT if needed
# PORT=8080
